<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8"/>
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
<div class="container-fluid p-3 h-100">
    <div class="row h-100">
        <div class="col flex-grow-1 h-100">
            <div class="d-flex h-100 justify-content-center align-items-center" id="th-page-body">
                <div class="w-50">
                    <h2 class="text-center">Login</h2>

                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error }}
                        </div>
                    {% endif %}

                    <form method="POST" action="" class="d-flex flex-column gap-2 needs-validation">
                        <div class="mb-3">
                            <label for="email-input" class="form-label">Email address</label>
                            <input name="email" placeholder="Email" class="form-control" id="email-input" autocomplete="email" required/>
                        </div>
                        <div class="mb-3">
                            <label for="password-input" class="form-label">Password</label>
                            <input name="password" placeholder="Password" class="form-control" type="password" id="password-input" autocomplete="password" required/>
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

</html>