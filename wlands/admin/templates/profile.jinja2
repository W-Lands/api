{% extends "layout.jinja2" %}
{% import "macros.jinja2" as macros %}

{% block title %}Profile {{ profile.name }}{% endblock %}
{% block nav_profiles %}active{% endblock %}

{% block content %}
    <h1>{{ profile.name }}</h1>
    <a href="/admin/admin-new/profiles" class="">&lt;- Back</a>
    <dl class="row">
        {{ macros.details_row("Id", profile.id) }}
        {{ macros.details_row("Name", profile.name) }}
        {{ macros.details_row("Description", profile.description) }}
        {{ macros.details_row("Created At", profile.created_at) }}
        {{ macros.details_row("Updated At", profile.updated_at) }}
        {{ macros.details_row("Public", profile.public|format_bool) }}
    </dl>

    <div>
        <button class="btn btn-warning">[TODO] Edit</button>
        <button class="btn btn-primary ms-2">[TODO] Upload manifest</button>
    </div>

    {% if current_root is none %}
        <table class="table table-striped table-bordered mt-2">
            <thead>
            <tr>
                <th>Directory</th>
            </tr>
            </thead>
            <tbody>
            {% for dir in root_dirs %}
                <tr>
                    <td>
                        <a href="/admin/admin-new/profiles/{{ profile.id }}?dir_type={{ dir.type }}">{{ dir.name }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3 class="mt-3">{{ current_root.name }}</h3>
        <div class="vstack">
            <a href="/admin/admin-new/profiles/{{ profile.id }}">.. Back</a>
            <a href="#">[TODO] Upload file</a>
        </div>

        <table class="table table-striped table-bordered mt-2">
            <thead>
            <tr>
                <th>Name</th>
                <th>Modified At</th>
                <th>Sha1</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for file in files %}
                <tr>
                    <td>
                        {% if file.id is none %}
                            <a href="/admin/admin-new/profiles/{{ profile.id }}?dir_type={{ current_root.type }}&dir_prefix={{ dir_prefix }}{{ "/"|e }}{{ file.name }}">{{ file.name }}</a>
                        {% else %}
                            <a href="{{ file.url }}">{{ file.name }}</a>
                        {% endif %}
                    </td>
                    <td>{% if file.modified_at is not none %}{{ file.modified_at }}{% endif %}</td>
                    <td>{% if file.sha1 is not none %}{{ file.sha1 }}{% endif %}</td>
                    <td>{% if file.size is not none %}{{ file.size|format_size }}{% endif %}</td>
                    <td>
                        <button class="btn btn-primary">[TODO] Rename</button>
                        <button class="btn btn-danger">[TODO] Delete</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if not hide_addresses %}
        <div class="d-flex flex-row justify-content-between align-items-center my-2 py-2 border-top">
            <h4 id="addresses" class="">Addresses</h4>
            <div class="">
                <button class="btn btn-primary">Add</button>
            </div>
        </div>
        {% if addresses %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Ip</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for ip in addresses %}
                    <tr>
                        <td>{{ ip.name }}</td>
                        <td>{{ ip.ip }}</td>
                        <td>
                            <button class="btn btn-primary btn-danger">[TODO] Remove</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endif %}
{% endblock %}
