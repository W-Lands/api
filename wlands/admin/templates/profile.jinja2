{% extends "layout.jinja2" %}
{% import "macros.jinja2" as macros %}

{% block title %}Profile {{ profile.name }}{% endblock %}
{% block nav_profiles %}active{% endblock %}

{% block content %}
    {% if unapplied %}
        <div class="border-bottom mb-4 pb-3">
            <h4>This profile has approximately {{ unapplied|length }} unapplied files (private changes)</h4>
            <a href="#unapplied-changes" data-bs-toggle="collapse">Show changes</a>
            <div id="unapplied-changes" class="collapse">
                <ul>
                    {% for change in unapplied %}
                        <li>
                            <strong>{{ "<"|e }}{{ change.root }}{{ ">"|e }}</strong>/
                            <code>{{ change.path }}</code> -
                            {% if change.created %}
                                new
                            {% elif change.deleted %}
                                deleted (or renamed)
                            {% else %}
                                unknown
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <h5>Do you want to apply them now?</h5>
            <div class="modal-footer">
                <form class="d-inline" action="{{ profile.id }}/apply-files" method="POST">
                    <button class="btn btn-primary btn-warning">Apply</button>
                </form>
                <form class="d-inline" action="{{ profile.id }}/revert-files" method="POST">
                    <button class="btn btn-primary ms-2 btn-danger">Revert</button>
                </form>
            </div>
        </div>
    {% endif %}

    <h1>{{ profile.name }}</h1>
    <a href="/admin/admin-new/profiles">&lt;- Back</a>
    <dl class="row">
        {{ macros.details_row("Id", profile.id) }}
        {{ macros.details_row("Name", profile.name) }}
        {{ macros.details_row("Description", profile.description) }}
        {{ macros.details_row("Created At", profile.created_at|format_datetime) }}
        {{ macros.details_row("Updated At", profile.updated_at|format_datetime) }}
        {{ macros.details_row("Public", profile.public|format_bool) }}
    </dl>

    <div>
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#edit-profile-modal">Edit</button>
        <button class="btn btn-primary ms-2" data-bs-toggle="modal" data-bs-target="#manifest-profile-modal">Upload manifest</button>
    </div>

    {% if current_root is none %}
        <table class="table table-striped table-bordered mt-2">
            <thead>
            <tr>
                <th>Directory</th>
            </tr>
            </thead>
            <tbody>
            {% for dir in root_dirs %}
                <tr>
                    <td>
                        <a href="/admin/admin-new/profiles/{{ profile.id }}?dir_type={{ dir.type }}">{{ dir.name }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3 class="mt-3">{{ current_root.name }}</h3>
        <div class="vstack">
            <a href="/admin/admin-new/profiles/{{ profile.id }}">.. Back</a>
            <a href="#" data-bs-toggle="modal" data-bs-target="#upload-profile-file-modal">Upload file</a>
        </div>

        <table class="table table-striped table-bordered mt-2">
            <thead>
            <tr>
                <th>Name</th>
                <th>Modified At</th>
                <th>Sha1</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for file in files %}
                <tr>
                    <td>
                        {% if file.id is none %}
                            <a href="/admin/admin-new/profiles/{{ profile.id }}?dir_type={{ current_root.type }}&dir_prefix={{ dir_prefix }}{{ "/"|e }}{{ file.name }}">{{ file.name }}</a>
                        {% else %}
                            <a href="{{ file.url }}">{{ file.name }}</a>
                        {% endif %}
                    </td>
                    <td>{% if file.created_at is not none %}{{ file.created_at|format_datetime }}{% endif %}</td>
                    <td>
                        {% if file.sha1 is not none %}
                            <a href="#" data-bs-toggle="popover" data-bs-title="Sha1" data-bs-placement="bottom" data-bs-content="{{ file.sha1 }}">{{ file.sha1[:8] }}</a>
                        {% endif %}
                    </td>
                    <td>{% if file.size is not none %}{{ file.size|format_size }}{% endif %}</td>
                    <td>
                        {% if not file.fake %}
                            <button
                                    class="btn btn-primary"
                                    data-bs-toggle="modal"
                                    data-bs-target="#rename-profile-file-modal"
                                    {% if file.id %}
                                    data-target-file="{{ file.id }}"
                                    {% else %}
                                    data-target-dir="{{ file.name }}"
                                    {% endif %}
                                    data-name="{{ file.name }}">
                                Rename
                            </button>
                            <button
                                    class="btn btn-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#delete-profile-file-modal"
                                    {% if file.id %}
                                    data-target-file="{{ file.id }}"
                                    {% else %}
                                    data-target-dir="{{ file.name }}"
                                    {% endif %}
                                    data-name="{{ file.name }}">
                                Delete
                            </button>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {% if not hide_addresses %}
        <div class="d-flex flex-row justify-content-between align-items-center my-2 py-2 border-top">
            <h4 id="addresses">Addresses</h4>
            <div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#create-ip-profile-modal">Add</button>
            </div>
        </div>
        {% if addresses %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Ip</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for ip in addresses %}
                    <tr>
                        <td>{{ ip.name }}</td>
                        <td>{{ ip.ip }}</td>
                        <td>
                            <form action="{{ profile.id }}/addresses/{{ ip.id }}/delete" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-primary btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <h5>No addresses added yet</h5>
        {% endif %}
    {% endif %}

    <div class="modal fade" id="edit-profile-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Edit profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" method="POST" id="edit-profile-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" required autocomplete="off" value="{{ profile.name }}">
                        </div>
                        <div class="mb-3">
                            <label for="description-input" class="form-label fw-bold">Description</label>
                            <textarea class="form-control" id="description-input" name="description" required>{{ profile.description }}</textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <label for="public-checkbox" class="form-label form-check-label">Public</label>
                            <input type="checkbox" class="form-check-input" id="public-checkbox" name="public" {% if profile.public %}checked{% endif %}>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="edit-profile-form">Edit</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="manifest-profile-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Upload manifest</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ profile.id }}/manifest" method="POST" id="manifest-profile-form" enctype="multipart/form-data">
                        <p>This will also make all file changes available</p>
                        <div class="mb-3">
                            <label for="manifest-file" class="form-label fw-bold">Manifest</label>
                            <input type="file" class="form-control" id="manifest-file" name="manifest" required accept=".json">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="manifest-profile-form">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="create-ip-profile-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Add address</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ profile.id }}/addresses" method="POST" id="create-ip-profile-form">
                        <div class="mb-3">
                            <label for="ip-name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="ip-name-input" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="ip-address-input" class="form-label fw-bold">Address</label>
                            <input type="text" class="form-control" id="ip-address-input" name="address" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-ip-profile-form">Add</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="upload-profile-file-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Upload manifest</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ profile.id }}/files" method="POST" id="upload-profile-file-form" enctype="multipart/form-data">
                        <input type="hidden" name="dir_type" value="{{ current_root.type }}">
                        <input type="hidden" name="dir_prefix" value="{{ dir_prefix }}">
                        <div class="mb-3">
                            <label for="file-parent-input" class="form-label fw-bold">Parent directory</label>
                            <input type="text" class="form-control" id="file-parent-input" name="parent">
                        </div>
                        <div class="mb-3">
                            <label for="files-file" class="form-label fw-bold">File(s)</label>
                            <input type="file" class="form-control" id="files-file" name="files" required multiple>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="upload-profile-file-form">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="rename-profile-file-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Renaming <span id="rename-file-name"></span></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ profile.id }}/files/rename" method="POST" id="rename-profile-file-form">
                        <input type="hidden" name="dir_type" value="{{ current_root.type }}">
                        <input type="hidden" name="dir_prefix" value="{{ dir_prefix }}">
                        <input type="hidden" name="target_file" id="rename-target-file">
                        <input type="hidden" name="target_dir" id="rename-target-dir">
                        <div class="mb-3">
                            <label for="rename-file-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="rename-file-input" name="new_name" required>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="rename-profile-file-form">Rename</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="delete-profile-file-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Deleting <span id="delete-file-name"></span></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="{{ profile.id }}/files/delete" method="POST" id="delete-profile-file-form">
                        <input type="hidden" name="dir_type" value="{{ current_root.type }}">
                        <input type="hidden" name="dir_prefix" value="{{ dir_prefix }}">
                        <input type="hidden" name="target_file" id="delete-target-file">
                        <input type="hidden" name="target_dir" id="delete-target-dir">
                        <h5 class="text-danger">
                            Are you sure you want to delete this file/directory?
                        </h5>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" form="delete-profile-file-form">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');
        const popoverList = [...popoverTriggerList].map(popoverTriggerEl => new bootstrap.Popover(popoverTriggerEl));

        const renameFileNameLabel = document.getElementById("rename-file-name");
        const renameFileNameInput = document.getElementById("rename-file-input");
        const renameFileTargetFile = document.getElementById("rename-target-file");
        const renameFileTargetDir = document.getElementById("rename-target-dir");

        const deleteFileNameLabel = document.getElementById("delete-file-name");
        const deleteFileTargetFile = document.getElementById("delete-target-file");
        const deleteFileTargetDir = document.getElementById("delete-target-dir");

        document.getElementById("rename-profile-file-modal").addEventListener("show.bs.modal", (e) => {
            console.log(e.relatedTarget.dataset);
            const targetName = e.relatedTarget.dataset.name;
            const targetFile = e.relatedTarget.dataset.targetFile;
            const targetDir = e.relatedTarget.dataset.targetDir;
            renameFileNameLabel.innerText = renameFileNameInput.value = targetName;
            renameFileTargetFile.value = targetFile ? targetFile : "";
            renameFileTargetDir.value = targetDir ? targetDir : "";
        });

        document.getElementById("delete-profile-file-modal").addEventListener("show.bs.modal", (e) => {
            console.log(e.relatedTarget.dataset);
            const targetName = e.relatedTarget.dataset.name;
            const targetFile = e.relatedTarget.dataset.targetFile;
            const targetDir = e.relatedTarget.dataset.targetDir;
            deleteFileNameLabel.innerText = targetName;
            deleteFileTargetFile.value = targetFile ? targetFile : "";
            deleteFileTargetDir.value = targetDir ? targetDir : "";
        });
    </script>
{% endblock %}
