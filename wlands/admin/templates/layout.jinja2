<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">W-Lands</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-content" aria-controls="navbar-content" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-content">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {% block nav_users %}{% endblock %}" href="{{ url_for("admin_users_page") }}">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% block nav_profiles %}{% endblock %}" href="{{ url_for("admin_profiles_page") }}">Profiles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% block nav_updates %}{% endblock %}" href="{{ url_for("admin_updates_page") }}">Launcher updates</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% block nav_ann %}{% endblock %}" href="{{ url_for("admin_announcements_page") }}">Launcher announcements</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% block nav_capes %}{% endblock %}" href="{{ url_for("admin_capes_page") }}">Capes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% block nav_authlib %}{% endblock %}" href="{{ url_for("admin_authlib_page") }}">Authlib agent</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{ url_for("admin_logout_page") }}">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid p-3 h-100">
    {% block content %}{% endblock %}
</div>
</body>

</html>