{% extends "layout.jinja2" %}
{% from "macros.jinja2" import render_pagination with context %}

{% block title %}Capes{% endblock %}
{% block nav_capes %}active{% endblock %}

{% block content %}
    <h1>Capes</h1>
    <button class="btn btn-primary mb-2 mt-2" data-bs-toggle="modal" data-bs-target="#create-cape-modal">Create cape</button>

    <div class="d-flex flex-wrap justify-content-center gap-2">
        {% for cape in capes %}
            <div class="card" style="width: 18rem;">
                <div class="text-center position-relative" style="aspect-ratio: 12 / 17;">
                    <a href="{{ url_for("admin_cape_info_page", cape_id=cape.id) }}">
                        <canvas id="cape-canvas-{{ cape.id }}" class="w-100 h-100 d-block"></canvas>
                    </a>
                </div>
                <div class="card-body d-flex flex-column gap-1">
                    <div>
                        <a href="{{ url_for("admin_cape_info_page", cape_id=cape.id) }}">
                            <h5 class="card-title">{{ cape.name }}</h5>
                        </a>
                        <p class="card-text m-0">{{ cape.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {{ render_pagination(pagination, "admin_capes_page") }}

    <div class="modal fade" id="create-cape-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create cape</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" method="POST" id="create-cape-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="description-input" class="form-label fw-bold">Description</label>
                            <textarea class="form-control" id="description-input" name="description"
                                      required></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <label for="cape-public-checkbox" class="form-label form-check-label">Public</label>
                            <input type="checkbox" class="form-check-input" id="cape-public-checkbox" name="public">
                        </div>
                        <div class="mb-3 form-check">
                            <label for="info-public-checkbox" class="form-label form-check-label">Info public</label>
                            <input type="checkbox" class="form-check-input" id="info-public-checkbox" name="info_public">
                        </div>
                        <div class="mb-3">
                            <label for="cape-file" class="form-label fw-bold">Cape file</label>
                            <input type="file" class="form-control" id="cape-file" name="file" required accept=".png">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-cape-form">Create</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const cape_urls = {
            {% for cape in capes %}
                {{ cape.id }}: "{{ cape.url }}",
            {% endfor %}
        };

        document.addEventListener("DOMContentLoaded", () => {
            for (const cape_id of [{% for cape in capes %}{{ cape.id }},{% endfor %}]) {
                const canvas = document.getElementById(`cape-canvas-${cape_id}`);
                const ctx = canvas.getContext("2d");
                const image = new Image();
                image.onload = () => {
                    ctx.imageSmoothingEnabled = false;
                    ctx.drawImage(image, 0, 0, 12, 17, 0, 0, canvas.width, canvas.height);
                }
                image.src = cape_urls[cape_id].replace(/&amp;/g, "&");
            }
        });
    </script>
{% endblock %}
