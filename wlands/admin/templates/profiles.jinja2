{% extends "layout.jinja2" %}

{% block title %}Profiles{% endblock %}
{% block nav_profiles %}active{% endblock %}

{% block content %}
    <h1>Profiles</h1>
    <button class="btn btn-primary mb-2 mt-2">[TODO] Create profile</button>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Public</th>
        </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td><a href="/admin/admin-new/profiles/{{ profile.id }}">{{ profile.name }}</a></td>
                <td>{{ profile.created_at|format_datetime }}</td>
                <td>{{ profile.updated_at|format_datetime }}</td>
                <td>{{ profile.public|format_bool }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
