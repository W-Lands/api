{% extends "layout.jinja2" %}

{% block title %}Profiles{% endblock %}
{% block nav_profiles %}active{% endblock %}

{% block content %}
    <h1>Profiles</h1>
    <button class="btn btn-primary mb-2 mt-2" data-bs-toggle="modal" data-bs-target="#create-profile-modal">Create profile</button>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Public</th>
        </tr>
        </thead>
        <tbody>
        {% for profile in profiles %}
            <tr>
                <td>{{ profile.id }}</td>
                <td><a href="{{ url_for("admin_profile_info_page", profile_id=profile.id) }}">{{ profile.name }}</a></td>
                <td>{{ profile.created_at|format_datetime }}</td>
                <td>{{ profile.updated_at|format_datetime }}</td>
                <td>{{ profile.public|format_bool }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal fade" id="create-profile-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create profile</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% if create_error %}
                        <div class="alert alert-danger" role="alert">
                            {{ create_error }}
                        </div>
                    {% endif %}

                    <form action="" method="POST" id="create-profile-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" required autocomplete="off" value="{{ create_form_name }}">
                        </div>
                        <div class="mb-3">
                            <label for="description-input" class="form-label fw-bold">Description</label>
                            <textarea class="form-control" id="description-input" name="description" required>{{ create_form_desc }}</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="manifest-file" class="form-label fw-bold">Manifest</label>
                            <input type="file" class="form-control" id="manifest-file" name="manifest" required accept=".json">
                        </div>
                        <div class="mb-3 form-check">
                            <label for="public-checkbox" class="form-label form-check-label">Public</label>
                            <input type="checkbox" class="form-check-input" id="public-checkbox" name="public">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-profile-form">Create</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            {% if show_create_modal %}
                new bootstrap.Modal(document.getElementById("create-profile-modal")).show();
            {% endif %}
        });
    </script>
{% endblock %}
