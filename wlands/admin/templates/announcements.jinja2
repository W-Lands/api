{% extends "layout.jinja2" %}
{% from "macros.jinja2" import render_pagination with context %}

{% block title %}Announcements{% endblock %}
{% block nav_ann %}active{% endblock %}

{% block content %}
    <h1>Announcements</h1>
    <button class="btn btn-primary mb-2 mt-2" data-bs-toggle="modal" data-bs-target="#create-announcement-modal">Create announcement</button>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Active From</th>
            <th>Active To</th>
            <th>Os</th>
            <th>Onetime</th>
        </tr>
        </thead>
        <tbody>
        {% for ann in announcements %}
            <tr>
                <td>{{ ann.id }}</td>
                <td><a href="{{ url_for("admin_announcement_info_page", ann_id=ann.id) }}">{{ ann.name }}</a></td>
                <td>{{ ann.created_at|format_datetime }}</td>
                <td>{{ ann.active_from|format_datetime }}</td>
                <td>{{ ann.active_to|format_datetime }}</td>
                <td>{{ ann.os|format_enum }}</td>
                <td>{{ ann.onetime|format_bool }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ render_pagination(pagination, "admin_announcements_page") }}

    <div class="modal fade" id="create-announcement-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create announcement</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" method="POST" id="create-announcement-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="active-from-input" class="form-label fw-bold">Active from</label>
                            <input type="datetime-local" class="form-control" id="active-from-input" name="active_from" required>
                        </div>
                        <div class="mb-3">
                            <label for="active-to-input" class="form-label fw-bold">Active to</label>
                            <input type="datetime-local" class="form-control" id="active-to-input" name="active_to" required>
                        </div>
                        <div class="mb-3">
                            <label for="os-select" class="form-label fw-bold">Os</label>
                            <select class="form-select" name="os" id="os-select">
                                {% for os in available_os %}
                                    <option value="{{ os.value }}">{{ os.name|lower|title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="changelog-input" class="form-label fw-bold">Text</label>
                            <textarea class="form-control" id="changelog-input" name="text" required></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <label for="onetime-checkbox" class="form-label form-check-label">Onetime</label>
                            <input type="checkbox" class="form-check-input" id="onetime-checkbox" name="onetime">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-announcement-form">Create</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
