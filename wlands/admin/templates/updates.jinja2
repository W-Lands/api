{% extends "layout.jinja2" %}

{% block title %}Updates{% endblock %}
{% block nav_updates %}active{% endblock %}

{% block content %}
    <h1>Updates</h1>
    <button class="btn btn-primary mb-2 mt-2" data-bs-toggle="modal" data-bs-target="#create-update-modal">Create update</button>
    <button class="btn btn-primary mb-2 mt-2 mx-2" data-bs-toggle="modal" data-bs-target="#create-update-auto-modal">Create update (auto)</button>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Size</th>
            <th>Os</th>
            <th>Public</th>
        </tr>
        </thead>
        <tbody>
        {% for update in updates %}
            <tr>
                <td>{{ update.id }}</td>
                <td>{{ update.code }}</td>
                <td><a href="{{ url_for("admin_update_info_page", update_id=update.id) }}">{{ update.name }}</a></td>
                <td>{{ update.created_at|format_datetime }}</td>
                <td>{{ update.size|format_size }}</td>
                <td>{{ update.os|format_enum }}</td>
                <td>{{ update.public|format_bool }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal fade" id="create-update-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create update</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="" method="POST" id="create-update-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name-input" class="form-label fw-bold">Name</label>
                            <input type="text" class="form-control" id="name-input" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="code-input" class="form-label fw-bold">Code</label>
                            <input type="number" class="form-control" id="code-input" name="code" required>
                        </div>
                        <div class="mb-3">
                            <label for="changelog-input" class="form-label fw-bold">Changelog</label>
                            <textarea class="form-control" id="changelog-input" name="changelog" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="os-select" class="form-label fw-bold">Os</label>
                            <select class="form-select" name="os" id="os-select">
                                {% for os in available_os %}
                                    <option value="{{ os.value }}">{{ os.name|lower|title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="repo-file" class="form-label fw-bold">Zipped update repository</label>
                            <input type="file" class="form-control" id="repo-file" name="file" required accept=".zip">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-update-form">Create</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="create-update-auto-modal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Create update (auto)</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="launcher-updates-auto" method="POST" id="create-update-auto-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="changelog-auto-input" class="form-label fw-bold">Changelog</label>
                            <textarea class="form-control" id="changelog-auto-input" name="changelog" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="repo-auto-file" class="form-label fw-bold">Zipped update repository (with metadata)</label>
                            <input type="file" class="form-control" id="repo-auto-file" name="file" required accept=".zip">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" form="create-update-auto-form">Create</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
